<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.laba.hospital.dao.repository.info.DeclarationRepository">

    <select id="findByPatientId" resultMap="declarationResultMap">
        SELECT * FROM declarations WHERE patient_id = #{id}
    </select>

    <insert id="create" keyColumn="id" keyProperty="declaration.id" useGeneratedKeys="true">
        INSERT INTO declarations(doctor_id, created, expires)
        VALUES (#{declaration.doctor.id}, #{declaration.created}, #{declaration.expires})
    </insert>

    <update id="update">
        UPDATE declarations SET expires = #{expires} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM declarations WHERE id = #{id}
    </delete>

    <resultMap id="declarationResultMap" type="com.solvd.laba.hospital.model.info.Declaration" autoMapping="false">
        <id column="id" property="id"/>
        <result column="created" property="created"/>
        <result column="expires" property="expires"/>
        <association property="doctor" resultMap="com.solvd.laba.hospital.dao.repository.person.EmployeeRepository.employeeResultMap"/>
    </resultMap>
</mapper>